
@{
    ViewBag.Title = "AddUserBank";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@model Model.EF.UserBank

<br />
<div class="content_top">
    <div class="heading">
        <h3>Nạp tiền</h3>
    </div>

    <div class="clear"></div>
</div>

@using (Html.BeginForm("Recharge", "User", FormMethod.Post))
{
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <br />
            <fieldset>

                <div class="form-group">
                    <label class="small mb-1" for="inputEmailAddress">Chọn ngân hàng</label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.BankName,
                           new SelectList(
                                  new List<Object>{
                                       new { value = 0 , text = "OCB"  },
                                       new { value = 1 , text = "ACB" },
                                       new { value = 2 , text = "VCB"}
                                    }, "value", "text", Model.BankName)
                        )
                        @Html.ValidationMessageFor(model => model.BankName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="small mb-1" for="inputEmailAddress">Số tài khoản ngân hàng</label>
                    @Html.TextBoxFor(model => model.STK, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Nhập số tài khoản" })
                    @Html.ValidationMessageFor(model => model.STK, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label class="small mb-1" for="inputEmailAddress">Nhập mật khẩu</label>
                    @Html.TextBoxFor(model => model.Pass, new { @class = "form-control", @type = "password", @autofocus = "autofocus", @placeholder = "Nhập số tiền" })
                    @Html.ValidationMessageFor(model => model.Pass, "", new { @class = "text-danger" })
                </div>
                <!-- Change this to a button or input when using this as a form -->
                <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                    <button type="submit" onclick="return confirm('Xác nhận thêm tài khoản?')" class="btn btn-lg btn btn-primary btn-block">Thêm tài khoản</button>
                </div>

            </fieldset>
        </div>
    </div>
}

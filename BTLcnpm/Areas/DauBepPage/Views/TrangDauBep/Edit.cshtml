@model Model.EF.Product
@{
    ViewBag.Title = "Chỉnh sửa thông tin món ăn";
    Layout = "~/Areas/DauBepPage/Views/Shared/Layout.cshtml";
}
@section jsFooter{
    <script>
        $("#chinh_sua_san_pham").validate({
            rules: {
                ID: "required",
                Quantity: "required",
            },

            messages: {
                ID: "Làm ơn nhập ID.",
                Quantity: "Làm ơn nhập số lượng.",
            },

            submitHandler: function (form) {
                form.submit();
            }
        });
    </script>
}
<div class="card-header"><i class="fas fa-table mr-1"></i>Chỉnh sửa thông tin món ăn</div>


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6" style="text-align:left">

                        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "chinh_sua_san_pham" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <div>
                                        <span style="padding-left:10px;">Mã sản phẩm</span>
                                    </div>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div>
                                        <span style="padding-left:10px;">Số lượng</span>
                                    </div>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Cập nhật số lượng" class="btn btn-primary" />
                                    </div>
                                </div>

                            </div>
                        }



                        <!-- /.panel-body -->
                    </div>
                </div>
            </div>
        </div>





@model List<Model.EF.Vendor>
@{
    ViewBag.Title = "Quản lý gian hàng";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<div class="card-header"><i class="fas fa-table mr-1"></i>Danh sách gian hàng</div>
<br />
@using (Html.BeginForm("Index", "User", FormMethod.Get))
{
    <div class="row form-group">
        <div class="col-lg-12">

            <div class="col-md-4">

                <a class="btn btn-success" href="/Admin/Vendor/Create">Thêm mới gian hàng</a>
            </div>
        </div>
    </div>
}
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>

                    <th>Tên</th>
                    <th>Tài khoản</th>
                    <th>Email</th>
                    <th>SĐT</th>
                    <th>Trạng thái</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="row">
                        <td>@item.VendorName</td>
                        <td>@item.VendorAccount</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td><a href="/Admin/Vendor/EditStatus?vendorId=@item.VendorID" class="btn-active" data-id="@item.VendorID">@Html.Raw(item.Status ? "<strong>Kích hoạt</strong>" : "<strong>Khoá</strong>")</a></td>
                        <td>
                            <a href="/Admin/Vendor/Edit?vendorId=@item.VendorID">Sửa</a>
                            |
                            <a href="/Admin/Vendor/Delete?vendorId=@item.VendorID" onclick="return confirm('Xác nhận Xóa gian hàng?')">Xóa</a>
                            |
                            <a href="/Admin/Product/Index?vendorId=@item.VendorID">DS món ăn</a>
                            |
                            <a href="/Admin/Cooker/Index?vendorId=@item.VendorID">DS đầu bếp</a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>
